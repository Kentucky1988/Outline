        <TabControl>
            <TabItem Header="Співробітники">
                <StackPanel Orientation="Vertical">
                    <DataGrid Name="employeeDataGrid" HorizontalAlignment="Left" Margin="20,20,20,20" MinHeight="160"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="Зберегти зміни" Width="auto" Height="30"  Click="SaveButton_Click" RenderTransformOrigin="-0.634,0.547" Margin="0,0,20,0" />
                    </StackPanel>
                </StackPanel>
            </TabItem>
            <TabItem Header="Лісгосп">
                <Grid/>
            </TabItem>
            <TabItem Header="Лісництво">
                <Grid/>
            </TabItem>
            <TabItem Header="Вид рубки">
                <Grid/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
